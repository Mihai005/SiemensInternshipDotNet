<Page x:Class="SiemensInternship.Views.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SiemensInternship.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="ManageBooksButton" Content="Manage Books" HorizontalAlignment="Center" Margin="5" Click="ManageBooksButton_Clicked" />
            <Button Name="ManageLoansButton" Content="Manage Loans" HorizontalAlignment="Center" Margin="5" Click="ManageLoansButton_Clicked" />
        </StackPanel>
    </Grid>
</Page>
